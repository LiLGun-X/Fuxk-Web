#!/bin/bash

# ========== CONFIG ==========
WEBROOT="/var/www/m3u8proxy"
PORT=6969
PHP_SOCKET="unix:/var/run/php/php$(php -r 'echo PHP_MAJOR_VERSION.".".PHP_MINOR_VERSION;')-fpm.sock"
# ============================

echo "?? à¸•à¸´à¸”à¸•à¸±à¹‰à¸‡ NGINX à¹à¸¥à¸° PHP..."
sudo apt update
sudo apt install -y nginx php php-fpm php-curl

echo "?? à¸ªà¸£à¹‰à¸²à¸‡à¹‚à¸Ÿà¸¥à¹€à¸”à¸­à¸£à¹Œà¹€à¸§à¹‡à¸šà¸—à¸µà¹ˆ $WEBROOT"
sudo mkdir -p "$WEBROOT"
sudo chown -R $USER:$USER "$WEBROOT"

echo "?? à¸ªà¸£à¹‰à¸²à¸‡ index.php..."
cat > "$WEBROOT/index.php" <<'EOF'
<?php
function e($s) {
    return htmlspecialchars($s, ENT_QUOTES, 'UTF-8');
}

$m3u8 = $_POST['m3u8'] ?? '';
$referer = $_POST['referer'] ?? '';
$generatedLink = '';
$historyFile = __DIR__ . '/history.json';

if ($m3u8 && $referer) {
    $encodedUrl = urlencode($m3u8);
    $encodedReferer = urlencode($referer);
    $generatedLink = "http://{$_SERVER['HTTP_HOST']}/stream.php?url=$encodedUrl&referer=$encodedReferer";

    $history = file_exists($historyFile) ? json_decode(file_get_contents($historyFile), true) : [];
    $history[] = [
        'link' => $generatedLink,
        'time' => date('Y-m-d H:i:s')
    ];
    file_put_contents($historyFile, json_encode($history, JSON_PRETTY_PRINT));
}

$history = file_exists($historyFile) ? json_decode(file_get_contents($historyFile), true) : [];
$history = array_reverse($history);
?>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>M3U8 Proxy Generator</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body {
      background-color: #121212;
      color: #ffffff;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 20px;
      margin: 0;
    }

    h2, h3 {
      text-align: center;
      color: #00ffc3;
    }

    form, .output, .history-block {
      background-color: #1e1e1e;
      border-radius: 10px;
      padding: 20px;
      margin: 20px auto;
      max-width: 700px;
      box-shadow: 0 0 10px rgba(0,255,200,0.2);
    }

    label {
      display: block;
      margin-bottom: 6px;
      color: #cccccc;
    }

    input[type="text"] {
      width: 100%;
      padding: 10px;
      border-radius: 6px;
      border: none;
      margin-bottom: 15px;
      background-color: #2c2c2c;
      color: #ffffff;
    }

    button {
      padding: 10px 20px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-weight: bold;
      transition: background 0.2s;
    }

    button[type="submit"] {
      background-color: #00ffc3;
      color: #000;
      width: 100%;
    }

    .copy-button {
      background-color: #00bfff;
      color: #fff;
      margin-top: 10px;
    }

    .link-item {
      margin-bottom: 15px;
    }

    .link-item input {
      margin-bottom: 6px;
    }

    .timestamp {
      color: #888;
      font-size: 0.8em;
    }

    @media (max-width: 600px) {
      input[type="text"], button {
        font-size: 16px;
      }
    }
  </style>
</head>
<body>
  <h2>M3U8 Proxy Generator</h2>

  <form method="post">
    <label>M3U8 URL:</label>
    <input type="text" name="m3u8" required value="<?= e($m3u8) ?>">

    <label>Referer:</label>
    <input type="text" name="referer" required value="<?= e($referer) ?>">

    <button type="submit">Generate Proxy Link</button>
  </form>

  <?php if ($generatedLink): ?>
    <div class="output">
      <h3>âœ… Generated Link</h3>
      <input type="text" id="newLink" value="<?= e($generatedLink) ?>" readonly>
      <button class="copy-button" onclick="copyText('newLink')">Copy</button>
    </div>
  <?php endif; ?>

  <?php if (!empty($history)): ?>
    <div class="history-block">
      <h3>ðŸ“œ History</h3>
      <?php foreach ($history as $i => $entry): ?>
        <div class="link-item">
          <input type="text" id="history<?= $i ?>" value="<?= e($entry['link']) ?>" readonly>
          <button class="copy-button" onclick="copyText('history<?= $i ?>')">Copy</button>
          <div class="timestamp"><?= e($entry['time']) ?></div>
        </div>
      <?php endforeach; ?>
    </div>
  <?php endif; ?>

  <script>
    function copyText(id) {
      const input = document.getElementById(id);
      input.select();
      input.setSelectionRange(0, 99999);
      document.execCommand("copy");
      alert("Copied!");
    }
  </script>
</body>
</html>
EOF

echo "?? à¸ªà¸£à¹‰à¸²à¸‡ stream.php..."
cat > "$WEBROOT/stream.php" <<'EOF'
<?php
$url = $_GET['url'] ?? '';
if (!$url || !filter_var($url, FILTER_VALIDATE_URL)) {
    http_response_code(400);
    exit('Invalid URL');
}

$referer = $_GET['referer'] ?? 'https://example.com';
$userAgent = $_GET['ua'] ?? 'Mozilla/5.0 (Windows NT 10.0; Win64; x64)';

$ch = curl_init();
curl_setopt($ch, CURLOPT_URL, $url);
curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);
curl_setopt($ch, CURLOPT_HTTPHEADER, [
    "Referer: $referer",
    "User-Agent: $userAgent"
]);
curl_setopt($ch, CURLOPT_FOLLOWLOCATION, true);
$data = curl_exec($ch);
$info = curl_getinfo($ch);
curl_close($ch);

if (strpos($info['content_type'], 'application/vnd.apple.mpegurl') !== false || strpos($url, '.m3u8') !== false) {
    header('Content-Type: application/vnd.apple.mpegurl');
} else {
    header('Content-Type: text/plain');
}

echo $data;
EOF

echo "?? à¸•à¸±à¹‰à¸‡à¸„à¹ˆà¸² NGINX à¸ªà¸³à¸«à¸£à¸±à¸šà¸žà¸­à¸£à¹Œà¸• $PORT..."
NGINX_CONF="/etc/nginx/sites-available/m3u8proxy"
sudo tee "$NGINX_CONF" > /dev/null <<EOF
server {
    listen $PORT;
    server_name _;

    root $WEBROOT;
    index index.php index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }

    location ~ \.php\$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass $PHP_SOCKET;
    }
}
EOF

echo "?? à¹€à¸›à¸´à¸”à¹ƒà¸Šà¹‰à¸‡à¸²à¸™ config..."
sudo ln -sf "$NGINX_CONF" /etc/nginx/sites-enabled/

echo "?? à¸£à¸µà¹‚à¸«à¸¥à¸” NGINX..."
sudo systemctl stop apache2
sudo systemctl disable apache2
sudo nginx -t && sudo systemctl reload nginx
sudo systemctl start nginx
echo "âœ… à¹€à¸ªà¸£à¹‡à¸ˆà¹à¸¥à¹‰à¸§! à¹€à¸‚à¹‰à¸²à¸”à¸¹à¸—à¸µà¹ˆ: http://<your-server-ip>:$PORT"
